#!/bin/sh
basedi=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedi=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -x "$basedi/node" ]; then
  exec "$basedi/node"  "$basedir/../jest/bin/jest.js" "$@"
else 
  exec node  "$basedi/../jest/bin/jest.js" "$@"
fi
